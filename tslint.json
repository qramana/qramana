{
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
      "align": [true,
        "parameters",
        "statements"
    ],
      "indent": [false, 2],
      "max-line-length": [true, 140],
      "semicolon": true,
      "no-namespace": false,
      "interface-name": false,
      "variable-name": false,
      "member-access": false,
      "object-literal-sort-keys": false,
      "object-literal-shorthand": false,
      "arrow-parens": false,
      "ordered-imports": false,
      "only-arrow-functions": false,
      "class-name": false,
      "trailing-comma": [true, {
        "multiline": "never",
        "singleline": "never"
      }],
      "no-shadowed-variable": false,
      "curly": false,
      "max-classes-per-file": true
    }
}
